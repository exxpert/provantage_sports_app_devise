<section id="forms">
    <h2>Sign in</h2>
  <div class="row">
    <div class="span12">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="clearfix">
        <%= f.label :email %>
        <div class="input"><%= f.email_field :email %></div>
        </div><!-- /clearfix -->
        
        <div class="clearfix">
        <%= f.label :password %>
        <div class="input"><%= f.password_field :password %></div>
        </div><!-- /clearfix -->
          
        <% if devise_mapping.rememberable? -%>
          <div class="clearfix">
            <div class="input">
              <ul class="inputs-list">
                <li>
                  <label>
                    <%= f.check_box :remember_me %>
                    <span>Remember me</span>
                  </label>
                </li>
              </ul>
            </div>
          </div><!-- /clearfix -->
        <% end -%>
        
        <div class="clearfix">
        <div class="input"><%= f.submit "Sign in", :class => "btn primary" %></div>
        </div><!-- /clearfix --> 
      <% end %>
      <div class="clearfix">
        <%= render :partial => "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>


